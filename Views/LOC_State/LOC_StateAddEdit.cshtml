
@{
    ViewData["Title"] = "LOC_StateAddEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using System.Data;
@model LOC_StateModel
<div class="pagetitle">
    <div><h1>State Add Edit</h1></div>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="EMP_Employee" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="LOC_State" asp-action="SelectAll">State</a></li>
            <li class="breadcrumb-item">State Add Edit</li>

        </ol>
    </nav>

</div><!-- End Page Title -->

<div class="container">
    <div class="fs-2">
    </div>
</div>
<div class="row">
    <div class="col-lg-12">

        <div class="card">
            <div class="card-body">
                <h3> LOC_State AddEdit</h3>

                <div asp-validation-summary="ModelOnly"></div>

                <div class="container-fluid">
                    <h3>@TempData["StateInsertMsg"]</h3>
                    <form method="post" asp-controller="LOC_State" asp-action="Save">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        @Html.HiddenFor(x=>x.StateID)
                        <div class="row">
                        <div class="col-lg-6">
                            <div class="fw-bold"><label class="col-sm-4 col-form-label" asp-for="CountryID"><span class="text-danger fw-bold">*</span>Country Name</label></div>
                            <select class="form-control" asp-for="CountryID" asp-items="@(new SelectList(ViewBag.CountryList,"CountryID","CountryName"))">
                                <option value="">Select Department</option>
                            </select>
                            <span class="text-danger" asp-validation-for="CountryID"></span>
                        </div>

                        <div class="col-lg-6">
                            <div class="fw-bold"><label class="col-sm-4 col-form-label" asp-for="StateName"><span class="text-danger fw-bold">*</span>State Name</label></div>
                            <div class="col-sm-12"><input type="text" class="form-control" asp-for="StateName" autocomplete="off" /></div>
                            <span class="text-danger" asp-validation-for="StateName"></span>
                        </div>
                        </div>
                      
                       


                        <br /><hr />
                        <div class="text-left">
                            <button type="submit" class="btn btn-success" value="Submit">Submit</button>
                            <a class="btn btn-secondary" asp-controller="LOC_State" asp-action="SelectAll">Back to List</a>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }









